def vocabulary_challenge():
    global points
    print("\nğŸ§  Task 1: Vocabulary Challenge â€“ Match the word with the image (text-based)\n")
    options = {
        "obuolys": "ğŸ",
        "mokykla": "ğŸ«",
        "sultys": "ğŸ§ƒ"
    }
    for word, emoji in options.items():
        answer = input(f"What is the Lithuanian word for {emoji}? ").strip().lower()
        if answer == word:
            print("âœ… Correct!")
            points += 5
        else:
            print(f"âŒ Incorrect. The answer was: {word}")
    print(f"ğŸ¯ You now have {points} points.")

def listening_clue():
    global points
    print("\nğŸ§ Task 2: Listening Clue â€“ Kur yra stotis?")
    print("Audio plays: 'Kur yra stotis?' (Where is the station?)")
    print("What does 'stotis' mean?")
    answer = input("Type the answer in English: ").strip().lower()
    if answer in ["station", "bus station", "train station"]:
        print("âœ… Correct!")
        points += 10
    else:
        print("âŒ Incorrect. 'Stotis' means 'station'.")
    print(f"ğŸ¯ You now have {points} points.")

