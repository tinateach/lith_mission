def grammar_lock():
    global points
    print("\nğŸ” Task 4: Grammar Lock â€“ Present Tense Verb Puzzle")
    print("Complete the Lithuanian verb: 'aÅ¡ ___ (dirbti)'")
    answer = input("Your answer: ").strip().lower()
    if answer == "dirbu":
        print("âœ… Correct!")
